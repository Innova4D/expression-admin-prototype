<link rel="import" href="../polymer/polymer.html">

<!--
Element providing solution to no problem in particular.

##### Example

    <pantalla-1></pantalla-1>

@element pantalla-1
@blurb Element providing solution to no problem in particular.
@status alpha
@homepage http://RCarlosTello.github.io/pantalla-1
-->
<polymer-element name="pantalla-1" attributes="author fancy">
  <template>
    <link rel="stylesheet" href="pantalla-1.css">
	<div id="admin">
		<core-icon class="icono" icon="room" ></core-icon>  
	<form>
		<h4>Administrador</h4>	
		<input type="button" class="iconovistamosaico" value="edit">
		<input type="button" class="iconovistalista" value="edit">	
		<input type="button" class="iconobusqueda" value="edit">
	</div>
	<div id="Evento">	
			<core-icon class="icono" icon="room" ></core-icon>  
		<form>
			<input type="button" class="opcion"  value="opcion">
			<h6>Creado, 10 Marzo de 2015</h6>
			<h4>Un Evento</h4>
					<div id="grafico">
						<input type="text" class="grafico"  value="aqui va el grafico">	
					</div>	
		</form>	
			<h3>Stream de Twitter </h3><input type="button" class="estado"  value="S">
			<h5> Token: </h5>
			<h5> Key: </h5>
			<input type="button" class="basura"  value="edit">
	</div>
    <content></content>
  </template>
  <script>
    Polymer({
      /**
       * The `author` attribute sets an initial author
       *
       * @attribute author
       * @type string
       * @default 'Dimitri Glazkov'
       */
      author: 'Dimitri Glazkov',

      /**
       * `fancy` is a property that does something fancy.
       *
       * @property fancy
       * @type bool
       * @default false
       */
      fancy: false,

      ready: function () {
        // Ready is a lifecycle callback.
        // You can do setup work in here.
        // More info: http://www.polymer-project.org/docs/polymer/polymer.html#lifecyclemethods
      },

      /**
       * The `sayHello` method will return a greeting.
       *
       * @method sayHello
       * @param {String} greeting Pass in a specific greeting.
       * @return {String} Returns a string greeting.
       */
      sayHello: function (greeting) {
        var response = greeting || 'Hello World!';
        return 'pantalla-1 says, ' + response;
      },

      /**
       * The `pantalla-1-lasers-success` event is fired whenever we
       * call fireLasers.
       *
       * @event pantalla-1-lasers-success
       * @param {Object} detail
       *   @param {string} detail.sound An amazing sound.
       */

      /**
       * The `fireLasers` method will fire the lasers. At least
       * it will dispatch an event that claims lasers were fired :)
       *
       * @method fireLasers
       */
      fireLasers: function () {
        this.fire('pantalla-1-lasers-success', { sound: 'Pew pew pew!' });
      }
    });
  </script>
</polymer-element>
